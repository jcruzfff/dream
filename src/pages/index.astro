---
import Layout from "../layouts/Layout.astro";
---

<Layout title="DREAM Token">
  <nav class="navbar">
    <div class="nav-content">
      <div class="logo">
        <img src="/dream-logo.svg" alt="DREAM" />
        <span>DREAM</span>
      </div>
      <div class="nav-links">
        <a href="/documentation" class="nav-link">Documentation</a>
        <button class="theme-toggle" id="themeToggle" aria-label="Toggle theme">
          <svg class="moon-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"/>
          </svg>
          <svg class="sun-icon" width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" style="display: none;">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 1v2M12 21v2M4.22 4.22l1.42 1.42M18.36 18.36l1.42 1.42M1 12h2M21 12h2M4.22 19.78l1.42-1.42M18.36 5.64l1.42-1.42"/>
            <circle cx="12" cy="12" r="5" stroke-width="2"/>
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <main class="hero">
    <div class="hero-content">
      <h1>Welcome to DREAM</h1>
      <p class="subtitle">The Future of Community-Driven Tokenomics</p>
      <div class="cta-buttons">
        <a
          href="https://dexscreener.com/base/0xc2Ebb232C42cF6af79DC991C5CDd5d04d2DA2dE8"
          target="_blank"
          rel="noopener noreferrer"
          class="primary-btn"
        >
          Buy DREAM
        </a>
        <a href="/documentation" class="secondary-btn"> Learn More </a>
      </div>
    </div>
  </main>
</Layout>

<script>
  const themeToggle = document.getElementById('themeToggle');
  const moonIcon = themeToggle?.querySelector('.moon-icon') as HTMLElement | null;
  const sunIcon = themeToggle?.querySelector('.sun-icon') as HTMLElement | null;
  
  // Check for saved theme preference
  const savedTheme = localStorage.getItem('theme') || 'dark';
  document.documentElement.setAttribute('data-theme', savedTheme);
  
  // Update icon visibility based on current theme
  function updateIcons(theme: string) {
    if (moonIcon && sunIcon) {
      moonIcon.style.display = theme === 'light' ? 'none' : 'block';
      sunIcon.style.display = theme === 'light' ? 'block' : 'none';
    }
  }
  
  // Initialize icons
  updateIcons(savedTheme);
  
  // Toggle theme
  themeToggle?.addEventListener('click', () => {
    const currentTheme = document.documentElement.getAttribute('data-theme');
    const newTheme = currentTheme === 'light' ? 'dark' : 'light';
    
    document.documentElement.setAttribute('data-theme', newTheme);
    localStorage.setItem('theme', newTheme);
    updateIcons(newTheme);
  });
</script>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(var(--background-rgb), 0.5);
    backdrop-filter: blur(8px);
    z-index: 1000;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    height: 84px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-primary);
    font-size: 1.25rem;
    font-weight: 500;
  }

  .logo img {
    height: 32px;
    width: auto;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .nav-link {
    color: var(--text-primary);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s;
    opacity: 0.8;
  }

  .nav-link:hover {
    opacity: 1;
    color: var(--accent-blue);
  }

  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 84px 2rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .hero::before {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url("/background.png");
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: -1;
    opacity: 0.6;
  }

  .hero::after {
    content: "";
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(var(--background-rgb), 0.7) 0%,
      rgba(var(--background-rgb), 0.5) 100%
    );
    z-index: -1;
  }

  .hero-content {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 3rem;
    line-height: 1.4;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .primary-btn,
  .secondary-btn {
    padding: 0.75rem 2rem;
    border-radius: 24px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
    font-size: 1rem;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(8px);
    color: var(--text-primary);
  }

  .primary-btn {
    background: rgba(59, 130, 246, 0.2);
    border: 1px solid rgba(59, 130, 246, 0.4);
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.1);
  }

  .primary-btn:hover {
    transform: translateY(-2px);
    background: rgba(59, 130, 246, 0.3);
    border-color: rgba(59, 130, 246, 0.6);
    box-shadow:
      0 0 25px rgba(59, 130, 246, 0.2),
      0 0 50px rgba(59, 130, 246, 0.15),
      inset 0 0 15px rgba(59, 130, 246, 0.15);
  }

  .secondary-btn {
    background: rgba(var(--text-primary-rgb), 0.05);
    border: 1px solid rgba(var(--text-primary-rgb), 0.1);
  }

  .secondary-btn:hover {
    background: rgba(var(--text-primary-rgb), 0.1);
    border-color: rgba(var(--text-primary-rgb), 0.2);
    transform: translateY(-2px);
    box-shadow:
      0 0 25px rgba(var(--text-primary-rgb), 0.1),
      0 0 50px rgba(var(--text-primary-rgb), 0.05),
      inset 0 0 15px rgba(var(--text-primary-rgb), 0.05);
  }

  @media (max-width: 768px) {
    .nav-content {
      padding: 0 1rem;
    }

    .hero {
      padding: 84px 1rem 1rem;
    }

    .hero-content {
      padding: 0;
    }

    h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .primary-btn,
    .secondary-btn {
      width: 100%;
      text-align: center;
      justify-content: center;
    }

    .hero::before {
      background-attachment: scroll;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .primary-btn,
    .secondary-btn {
      padding: 0.625rem 1.5rem;
      font-size: 0.9375rem;
    }
  }

  .theme-toggle {
    background: none;
    border: none;
    padding: 8px;
    cursor: pointer;
    border-radius: 4px;
    transition: background-color 0.2s;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--text-primary);
  }

  .theme-toggle:hover {
    background: var(--surface);
  }

  .moon-icon,
  .sun-icon {
    color: var(--text-primary);
    transition: color 0.2s;
  }
</style>
