---
import Layout from "../layouts/Layout.astro";
---

<Layout title="DREAM Token">
  <nav class="navbar">
    <div class="nav-content">
      <div class="logo">
        <img src="/dream-logo.svg" alt="DREAM" />
        <span>DREAM</span>
      </div>
      <div class="nav-links">
        <a href="/documentation" class="nav-link">Documentation</a>
        <button class="theme-toggle">
          <svg
            width="20"
            height="20"
            fill="none"
            stroke="currentColor"
            viewBox="0 0 24 24"
          >
            <path
              stroke-linecap="round"
              stroke-linejoin="round"
              stroke-width="2"
              d="M20.354 15.354A9 9 0 018.646 3.646 9.003 9.003 0 0012 21a9.003 9.003 0 008.354-5.646z"
            ></path>
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <main class="hero">
    <div class="hero-content">
      <h1>Welcome to DREAM</h1>
      <p class="subtitle">The Future of Community-Driven Tokenomics</p>
      <div class="cta-buttons">
        <a
          href="https://dexscreener.com/base/0xc2Ebb232C42cF6af79DC991C5CDd5d04d2DA2dE8"
          target="_blank"
          rel="noopener noreferrer"
          class="primary-btn"
        >
          Buy DREAM
        </a>
        <a href="/documentation" class="secondary-btn"> Learn More </a>
      </div>
    </div>
  </main>
</Layout>

<style>
  .navbar {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    background: rgba(0, 0, 0, 0.5);
    backdrop-filter: blur(8px);
    z-index: 1000;
    border-bottom: 1px solid rgba(255, 255, 255, 0.1);
  }

  .nav-content {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 24px;
    height: 84px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    color: var(--text-primary);
    font-size: 1.25rem;
    font-weight: 500;
  }

  .logo img {
    height: 32px;
    width: auto;
  }

  .nav-links {
    display: flex;
    align-items: center;
    gap: 24px;
  }

  .nav-link {
    color: var(--text-primary);
    text-decoration: none;
    font-size: 0.9375rem;
    transition: color 0.2s;
  }

  .nav-link:hover {
    color: var(--accent-blue);
  }

  .theme-toggle {
    background: none;
    border: none;
    padding: 8px;
    color: var(--text-primary);
    cursor: pointer;
    border-radius: 4px;
    transition: all 0.2s;
  }

  .theme-toggle:hover {
    background: var(--surface);
    color: var(--text-primary);
  }

  .hero {
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 84px 2rem 2rem;
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
  }

  .hero::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background-image: url('/background.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    z-index: -1;
    opacity: 0.6;
  }

  .hero::after {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(
      to bottom,
      rgba(0, 0, 0, 0.7) 0%,
      rgba(0, 0, 0, 0.5) 100%
    );
    z-index: -1;
  }

  .hero-content {
    width: 100%;
    max-width: 800px;
    margin: 0 auto;
    text-align: center;
  }

  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
    font-weight: 600;
    letter-spacing: -0.02em;
  }

  .subtitle {
    font-size: 1.5rem;
    color: var(--text-primary);
    margin-bottom: 3rem;
    line-height: 1.4;
    opacity: 0.9;
  }

  .cta-buttons {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
  }

  .primary-btn,
  .secondary-btn {
    padding: 0.75rem 2rem;
    border-radius: 24px;
    text-decoration: none;
    font-weight: 500;
    transition: all 0.2s;
    font-size: 1rem;
    position: relative;
    overflow: hidden;
    backdrop-filter: blur(8px);
    color: var(--text-primary);
  }

  .primary-btn {
    background: rgba(59, 130, 246, 0.2);
    border: 1px solid rgba(59, 130, 246, 0.4);
    box-shadow: 0 0 20px rgba(59, 130, 246, 0.1);
  }

  .primary-btn:hover {
    transform: translateY(-2px);
    background: rgba(59, 130, 246, 0.3);
    border-color: rgba(59, 130, 246, 0.6);
    box-shadow:
      0 0 25px rgba(59, 130, 246, 0.2),
      0 0 50px rgba(59, 130, 246, 0.15),
      inset 0 0 15px rgba(59, 130, 246, 0.15);
  }

  .secondary-btn {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  .secondary-btn:hover {
    background: rgba(255, 255, 255, 0.1);
    border-color: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
    box-shadow:
      0 0 25px rgba(255, 255, 255, 0.1),
      0 0 50px rgba(255, 255, 255, 0.05),
      inset 0 0 15px rgba(255, 255, 255, 0.05);
  }

  @media (max-width: 768px) {
    .nav-content {
      padding: 0 1rem;
    }

    .hero {
      padding: 84px 1rem 1rem;
    }

    .hero-content {
      padding: 0;
    }

    h1 {
      font-size: 2.5rem;
    }

    .subtitle {
      font-size: 1.2rem;
    }

    .cta-buttons {
      flex-direction: column;
    }

    .primary-btn,
    .secondary-btn {
      width: 100%;
      text-align: center;
      justify-content: center;
    }

    .hero::before {
      background-attachment: scroll;
    }
  }

  /* Ensure all text is white */
  .navbar,
  .hero,
  .hero-content,
  .nav-link,
  .theme-toggle,
  h1,
  .subtitle,
  .primary-btn,
  .secondary-btn,
  .logo span {
    color: var(--text-primary) !important; /* Force white color */
  }

  /* Update specific styles */
  .nav-link {
    color: var(--text-primary);
    opacity: 0.8;
    transition: opacity 0.2s;
  }

  .nav-link:hover {
    opacity: 1;
    color: var(--text-primary);
  }

  .theme-toggle {
    color: var(--text-primary);
  }

  .theme-toggle:hover {
    color: var(--text-primary);
  }

  h1 {
    font-size: 4rem;
    margin-bottom: 1rem;
    color: var(--text-primary);
    font-weight: 600;
    letter-spacing: -0.02em;
    /* Remove any gradient or background effects */
    background: none;
    -webkit-text-fill-color: var(--text-primary);
  }

  .subtitle {
    font-size: 1.5rem;
    color: var(--text-primary);
    opacity: 0.9;
    margin-bottom: 3rem;
    line-height: 1.4;
  }

  .primary-btn,
  .secondary-btn {
    color: var(--text-primary);
  }

  /* Ensure text remains white even with backdrop-filter */
  .primary-btn::after,
  .secondary-btn::after {
    color: var(--text-primary);
  }

  /* Update existing styles */
  .hero {
    min-height: 100vh;
    padding: 2rem;
  }

  /* Add responsive styles */
  @media (max-width: 768px) {
    .navbar {
      height: 70px;
    }

    .nav-content {
      padding: 0 1rem;
    }

    .logo span {
      font-size: 1.125rem;
    }

    .logo img {
      height: 28px;
    }

    h1 {
      font-size: 2.5rem;
      text-align: center;
    }

    .subtitle {
      font-size: 1.125rem;
      text-align: center;
    }

    .hero {
      padding: 1rem;
    }

    .cta-buttons {
      flex-direction: column;
      gap: 1rem;
    }

    .primary-btn,
    .secondary-btn {
      width: 100%;
      text-align: center;
    }
  }

  @media (max-width: 480px) {
    h1 {
      font-size: 2rem;
    }

    .subtitle {
      font-size: 1rem;
    }

    .primary-btn,
    .secondary-btn {
      padding: 0.625rem 1.5rem;
      font-size: 0.9375rem;
    }
  }
</style>
